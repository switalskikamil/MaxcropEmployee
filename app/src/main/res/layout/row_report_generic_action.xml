<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop ="1dp"
    android:layout_marginLeft="1dp"
    android:layout_marginRight="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorBrownishDark"
        android:id="@+id/report_row_price_group_title"
        android:visibility="gone">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="?"
            android:id="@+id/report_row_price_group_title_text"
            android:textAlignment="center"
            android:textColor="@color/white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorVioletish"

        android:id="@+id/action_holder"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@color/colorVioletishDark"
            android:id="@+id/action_date_holder"
            android:minWidth="25dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:src="@drawable/calendar"
                android:tint="@color/white"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/row_tag_icon"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="2021-12-09"
                android:id="@+id/action_date"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/report_row_title_section">
            <TextView
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:padding="2dp"
                android:textStyle="bold"
                android:layout_gravity="top"
                android:id="@+id/action_labour_label"
                android:text="Praca na czas"/>

            <TextView
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/colorLight"
                android:layout_gravity="top"
                android:id="@+id/action_labour_detail_one"
                android:layout_marginLeft="4dp"
                android:text="godz. od: 11:30 test test test test dupa"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/colorLight"
                android:layout_gravity="top"
                android:id="@+id/action_labour_detail_two"
                android:layout_marginLeft="4dp"

                android:text="gpdz. do: 17:45"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:id="@+id/report_row_midle_section">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/colorLight"
                android:padding="0dp"

                android:textStyle="bold"
                android:id="@+id/action_labour_value"
                android:text="6h 15min"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/colorLight"
                android:padding="0dp"
                android:gravity="center_horizontal"
                android:layout_gravity="top"
                android:id="@+id/action_labour_wage"
                android:text="7.00/h"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:padding="9dp"
            android:textStyle="bold"
            android:gravity="end"
            android:layout_gravity="center_vertical"
            android:id="@+id/action_money_value"
            android:text="PLN 70.00"/>

    </LinearLayout>

</LinearLayout>