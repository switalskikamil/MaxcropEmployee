<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/issue_background"
        android:layout_marginBottom="2dp"
        android:background="@color/colorPrimaryDark">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="1dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:id="@+id/action_date_holder"
                android:minWidth="25dp"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="26dp"
                    android:src="@drawable/calendar"
                    android:tint="@color/white"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/row_tag_icon"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="2021-12-09"
                    android:id="@+id/action_date"
                    android:textAlignment="center"
                    android:textColor="@color/colorLight"
                    android:textSize="14sp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/issue_status_bar">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:text="@string/issue_reg_date"
                            android:textSize="14sp"
                            android:layout_marginStart="1dp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:gravity="center_vertical"

                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:id="@+id/issue_registration_time"
                            android:text="2022-01-21 17:30:23"
                            android:textSize="14sp"
                            android:layout_marginStart="1dp"
                            android:textColor="@color/colorLight"
                            android:gravity="center_vertical"

                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="3dp"
                        android:layout_gravity="end">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Status:"
                            android:textSize="14sp"
                            android:layout_marginEnd="3dp"
                            android:gravity="end"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/issue_registration_status"
                            android:text="SENT"
                            android:textSize="14sp"
                            android:layout_marginEnd="3dp"
                            android:gravity="end"
                            android:textColor="@color/colorLight"
                            />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/label_issue_apply_to"
                android:textColor="@color/white"
                android:gravity="start"
                android:padding="2dp"
                android:layout_margin="4dp"
                android:textSize="14sp"
                android:textStyle="bold"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/issue_apply_to"
                android:text="Praca na godziny, Zbieranie, Obszar AB, 13:30-15:30"
                android:background="@color/white"
                android:gravity="start"
                android:padding="2dp"
                android:layout_margin="4dp"
                android:textSize="14sp"
                android:textStyle="bold"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/label_field"
                android:textColor="@color/white"
                android:gravity="start"
                android:padding="2dp"
                android:layout_margin="4dp"
                android:textSize="14sp"
                android:textStyle="bold"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/action_field_label"
                android:background="@color/white"
                android:gravity="start"
                android:padding="2dp"
                android:layout_margin="4dp"
                android:textSize="14sp"
                android:textStyle="bold"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/label_field_value"
                android:textColor="@color/white"
                android:gravity="start"
                android:padding="2dp"
                android:layout_margin="4dp"
                android:textSize="14sp"
                android:textStyle="bold"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/action_field_value"
                android:background="@color/white"
                android:gravity="start"
                android:padding="2dp"
                android:layout_margin="4dp"
                android:textSize="14sp"
                android:textStyle="bold"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/issue_description"
                android:textColor="@color/white"
                android:gravity="start"
                android:padding="2dp"
                android:layout_margin="4dp"
                android:textSize="14sp"
                android:textStyle="bold"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/issue_description"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. "
                android:background="@color/white"
                android:gravity="start"
                android:padding="2dp"
                android:layout_margin="4dp"
                android:textSize="14sp"
                android:textStyle="bold"

                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>